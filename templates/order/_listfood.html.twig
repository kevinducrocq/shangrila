<h2 class="text-center mb-3">{{category.name}}</h2><hr>
<div class="row">
	{% for food in foods %}
		{% if food.hide == false %}
			<div class="col-lg-3 col-md-4 col-sm-6">
				<div class="card my-2">
					<a href="{{path('see_food_details',{'id':food.id})}}">
						<img src="{{asset(path_image_menu ~ food.img)}}" class="img-fluid card-img-top" alt="{{food.name}}">
					</a>
					<div class="card-body">
						<div class="d-flex justify-content-between align-items-center">
							<h5 class="card-title">{{food.name}}</h5>
							<a href="{{path('see_food_details',{id:food.id})}}" class="btn btn-sm btn-light">
								<i class="fas fa-eye"></i>
							</a>
						</div>
						<p class="price card-text">{{food.price|number_format(2)}}
							&euro;</p>
						<a href="{{path('addItemToCart',{id:food.id})}}" class="btn btn-secondary text-white">
							<i class="fas fa-cart-plus"></i>
							Ajouter
						</a>
					</div>
				</div>
			</div>
		{% endif %}
	{% endfor %}
</div>
