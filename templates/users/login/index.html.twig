{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<div class="container mb-5">
		<div class="row">
			<div class="mt-5 col-md-6 offset-md-3 bg-light shadow px-5 pb-3">
				<div class="mb-5 mt-5">
					<h1 class="h2 text-center">Connexion</h1>
				</div>
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3 text-center bg-light">
							Vous êtes connecté en tant que :
							{{ app.user.lastname }}
							{{ app.user.firstname }}. Ce n'est pas vous ?
							<a href="{{ path('app_logout') }}">Déconnexion</a>
						</div>
					{% endif %}

					<p class="text-center text-muted">Pas de compte ?
						<a href="{{path('app_register')}}" class="btn-sm btn btn-secondary">Inscrivez-vous</a>
					</p>
					<hr>

					<label for="username" class="mb-1">Email</label>
					<input type="text" id="username" value="{{ last_username }}" name="_username" class="form-control mb-4">
					<label for="password" class="mb-1">Mot de passe</label>
					<input
					type="password" name="_password" id="password" class="form-control">

					{# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}

					<button type="submit" class="btn btn-primary mt-4 form-control">Se connecter</button>
				</form>
				<hr>
				<div class="mt-3 text-muted">
					Mot de passe oublié?
					<a href="{{path('app_forgot_password_request')}}">
						cliquez-ici</a>
				</div>

			</div>
		</div>
	</div>

{% endblock %}
