{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

	<div class="container mb-5">
		<div class="row">
			<div class="mt-5 col-md-6 offset-md-3 bg-light shadow px-5 pb-3">
				<div class="mb-5 mt-5">
					<h1 class="h2 text-center">Inscription</h1>
				</div>
				<p class="text-center text-muted">Vous avez déjà un compte ?
					<a href="{{path('app_login')}}" class="btn-sm btn btn-secondary">Connectez-vous</a>
				</p>
				<hr>
				{{form_start(registrationForm)}}
				{{form_widget(registrationForm)}}
				<button type="submit" class="btn btn-primary form-control">S'inscrire</button>
				{{form_end(registrationForm)}}
			</div>
		</div>
	</div>

{% endblock %}
