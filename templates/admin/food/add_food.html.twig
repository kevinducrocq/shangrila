{% extends "base.html.twig" %}

{% block title %}Admin - Ajouter un menu
{% endblock %}

{% block body %}
	{% include "/admin/_sidebar_admin_mobile.html.twig" %}

	<div class="container mt-5 mb-5">

		<div class="d-flex justify-content-between align-items-center">
			<h1 class="h2 mb-5">Ajouter un menu</h1>
		</div>
		<div class="row">
			<div class="col-md-3" id="navi">
				{% include "/admin/_sidebar-admin.html.twig" %}
			</div>
			<div class="col-md-9">
				{{form_start(foodForm)}}
				{{form_widget(foodForm)}}
				<button type="submit" class="btn btn-primary">Ajouter</button>
				<a href="{{path('show_food')}}" class="btn btn-dark">
					<i class="fas fa-backward"></i> Retour</a>
				{{form_end(foodForm)}}
			</div>
		</div>
	</div>

{% endblock %}
