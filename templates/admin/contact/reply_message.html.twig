{% extends "base.html.twig" %}

{% block title %}Admin - Gestion des messages
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="/css/datatables.min.css"/>
{% endblock %}


{% block body %}
	{% include "/admin/_sidebar_admin_mobile.html.twig" %}

	<div class="container mt-5 mb-5">

		<div class="d-flex justify-content-between align-items-center">
			<h1 class="h2 mb-5">Réponse au message de :
			</h1>
		</div>

		<div class="row">

			<div class="col-md-3" id="navi">
				{% include "/admin/_sidebar-admin.html.twig" %}
			</div>

			<div class="bg-light shadow p-5 col-md-9">
				{{form_start(contactAnswerForm)}}
				{{form_widget(contactAnswerForm)}}
				<button type="submit" class="btn btn-primary">Répondre</button>
				<a href="{{path('show_messages')}}" class="btn btn-dark">
					<i class="fas fa-backward"></i>
					Retour</a>
				{{form_end(contactAnswerForm)}}
			</div>

		</div>
	</div>

{% endblock %}
