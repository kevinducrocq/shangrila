{% extends "base.html.twig" %}

{% block title %}Admin - Edition d'une catégorie
{% endblock %}

{% block body %}
	{% include "/admin/_sidebar_admin_mobile.html.twig" %}

	<div class="container mt-5 mb-5">
		<div class="d-flex justify-content-between align-items-center">
			<h1 class="h2 mb-5">Edition d'une catégorie</h1>
		</div>

		<div class="row">

			<div class="col-md-3" id="navi">
				{% include "/admin/_sidebar-admin.html.twig" %}
			</div>

			<div class="col-md-9 p-5 bg-light shadow">
				{{form_start(categoryEditForm)}}
				{{form_widget(categoryEditForm)}}
				<button type="submit" class="btn btn-primary">Modifier</button>
				<a href="{{path('show_category')}}" class="btn btn-dark">
					<i class="fas fa-backward"></i>
					Retour</a>
				{{form_end(categoryEditForm)}}
			</div>
		</div>
	</div>

{% endblock %}
