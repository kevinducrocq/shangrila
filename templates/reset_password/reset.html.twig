{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="mt-5 col-md-6 offset-md-3 bg-light shadow px-5 pb-3">
				<div class="mb-5 mt-5">
					<h1 class="h2 text-center">Réinitialisation de votre mot de passe</h1>
				</div>
				<hr>
				{{ form_start(resetForm) }}
				{{ form_row(resetForm.plainPassword) }}
				<button type="submit" class="btn btn-primary form-control">Réinitialisation</button>
				{{ form_end(resetForm) }}
			</div>
		</div>
	</div>
{% endblock %}
